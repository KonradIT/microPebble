<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MicroPebble" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MicroPebble.Splash" parent="Theme.SplashScreen">
        <!-- Some emulators have trouble switching themes. Hardcode no action bar in the splash theme -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowSplashScreenBackground">#ffb694</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MicroPebble</item>
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>
    </style>
</resources>
